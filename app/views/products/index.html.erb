<h1>Products</h1>

<%= link_to "New product", new_product_path %>

<div class="col-md-6 col-md-offset-3">
	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Price</th>
     
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |product| %>
				<tr>
					<td><%= product.title %></td>
					<td><%= product.price %></td>
					<td><%= image_tag product.cover.url()%></td>
          
					<td>


						<%= link_to "Edit", edit_product_path(product) %>
						<%= link_to "Delete", product_path(product), method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<% @categoria.each do |s|%>
    <div class="field">
      <%=check_box_tag "products[categories[]]", s.id%> <%= s.name%>
    </div>

<%end%>

</div>